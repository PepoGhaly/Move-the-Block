#include <iostream>
#include <SFML/Graphics.hpp>
using namespace std; using namespace sf;

bool isSpriteHover(FloatRect sprite,Vector2f mp)
{
	if (sprite.contains(mp)) {
		return true;
	}
	return false;
}
void main() {
	RenderWindow win(VideoMode(800, 800), "Peter Prog", Style::Close | Style::Resize);
	Sprite RedB, YB,YB1;
	Texture MainB_tux, B_tux, B1_tux;
	RedB.setPosition(50, 50);YB.setPosition(250, 250);YB1.setPosition(550, 550);
	float x = 148.5;
	float y = 72.5;
	float x1 = 225.5;
	float y1 = 72;
	RedB.setOrigin(x, y);YB.setOrigin(x1, y1);YB1.setOrigin(x1, y1);

	MainB_tux.loadFromFile("MainB.jpg"); B_tux.loadFromFile("B.jpg");B1_tux.loadFromFile("B1.jpg");
	RedB.setTexture(MainB_tux); YB.setTexture(B_tux); YB1.setTexture(B1_tux);
	sf::Vector2f mp;
	while (win.isOpen())
	{
		Event evnt;
		while (win.pollEvent(evnt)) {
			if (evnt.type == Event::Closed) {
				win.close();
			}
			if (Mouse::isButtonPressed(Mouse::Left)) {
				Vector2i pos4 = Mouse::getPosition(win);
				cout << pos4.x << " " << pos4.y << endl;
			}
			mp.x = sf::Mouse::getPosition(win).x;
			mp.y = sf::Mouse::getPosition(win).y;
			if (isSpriteHover(RedB.getGlobalBounds(), sf::Vector2f(evnt.mouseButton.x, evnt.mouseButton.y)) == true)
			{
				while (true)
				{
					if (Mouse::isButtonPressed(Mouse::Left)) {
						Vector2i pos = Mouse::getPosition(win);
						RedB.setPosition((float)pos.x, 50);
					}
					else break;
				}
			}
			if (isSpriteHover(YB.getGlobalBounds(), sf::Vector2f(evnt.mouseButton.x, evnt.mouseButton.y)) == true)
			{
				while (Mouse::isButtonPressed(Mouse::Left))
				{
					Vector2i pos2 = Mouse::getPosition(win);
					YB.setPosition((float)pos2.x, 250);
				}
			}if (isSpriteHover(YB1.getGlobalBounds(), sf::Vector2f(evnt.mouseButton.x, evnt.mouseButton.y)) == true)
			{
				while (Mouse::isButtonPressed(Mouse::Left))
				{
					Vector2i pos3 = Mouse::getPosition(win);
					YB1.setPosition(550, (float)pos3.y);
				}
			}
			win.clear();
			win.draw(MainB);
			win.draw(B);
			win.draw(B1);
			win.display();
		}
	}
}
